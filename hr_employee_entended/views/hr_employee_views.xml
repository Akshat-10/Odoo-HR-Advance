<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_adding_imp_fields" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.for.adding.important.fields</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet//field[@name='company_id']" position="after">
                <field name="resource_calendar_id" string="Working Shift" readonly="0"/>
                <field name="contract_id" readonly="0"/>
                <field name="first_contract_date" readonly="0" />
                <field name="joining_date" readonly="0" />
            </xpath>

            <xpath expr="//page[@name='hr_settings']" position="after">
                <page name="employee_payroll_details" string="Payroll Details">
                    <group>
                        <group string='Attendence Data' name="attendance_data">
                            <field name="last_attendance_worked_hours" readonly="0" invisible="0"/>
                            <field name="last_attendance_id" readonly="0" invisible="0"/>
                            <field name="attendance_state" readonly="0" invisible="0"/>
                            <field name="leave_manager_id" readonly="0" invisible="0"/>
                            <field name="current_leave_id" readonly="0" invisible="0"/>
                            <field name="current_leave_state" readonly="0" invisible="0"/>
                            <field name="allocations_count" readonly="0" invisible="0"/>
                            <field name="allocation_count" readonly="0" invisible="0"/>
                            <field name="leaves_count" readonly="0" invisible="0"/>
                            <field name="show_leaves" readonly="0" invisible="0"/>
                            <field name="remaining_leaves" readonly="0" invisible="0"/>
                            <field name="last_attendance_worked_hours" readonly="0" invisible="0"/>
                            <field name="hours_previously_today" readonly="0" invisible="0"/>
                            <field name="hours_previously_today" readonly="0" invisible="0"/>
                            <field name="hours_last_month" readonly="0" invisible="0"/>

                            <field name="contracts_count" readonly="0" invisible="0"/>
                            <field name="payslip_count" readonly="0" invisible="0"/>
                            <field name="related_partners_count" readonly="0" invisible="0"/>
                            <field name="child_all_count" readonly="0" invisible="0"/>
                            <field name="expense_manager_id" readonly="0" invisible="0"/>

                            <field name="has_timesheet" readonly="0" invisible="0"/>
                            <field name="total_overtime" readonly="0" invisible="0"/>
                        </group>
                        <group>
                        </group>
                            <field name="overtime_ids" widget="section_one2many"/>

                            <field name="attendance_ids" widget="section_one2many"/>

                            <field name="contract_ids" widget="section_one2many"/>

                            <field name="candidate_id" widget="section_one2many"/>

                    </group>
                </page>
            </xpath>
            
            <xpath expr="//page[@name='public']//group[4]" position="replace">
                <group string="Schedule" name="group_schedule" >
                    <field name="resource_calendar_id" help="The default working hours are set in configuration." invisible="1"/>
                    <field name="id" invisible="1"/>
                    <field name="tz" required="id"/>
                </group>
            </xpath>

        </field>
    </record>


    <record id="view_employee_tree_adding_imp_fields" model="ir.ui.view">
        <field name="name">hr.employee.tree.inherit.for.adding.important.fields</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="editable">top</attribute>
            </xpath>

            <xpath expr="//list/field[@name='activity_ids']" position="replace">
                <field name="activity_ids" widget="list_activity" optional="hide"/>
            </xpath>

        </field>
    </record>

    <record id="view_employee_tree_add_imp_fields" model="ir.ui.view">
        <field name="name">hr.employee.tree.inherit.for.add.important.fields</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_attendance.view_employee_tree_inherit_leave"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='attendance_manager_id']" position="after">
                <field name="resource_calendar_id" string="Working Shift" readonly="0" optional="show" />
                <!-- to delete later maybe  below -->
                    <field name="last_attendance_worked_hours" readonly="0" invisible="0" optional="hide"/>
                    <field name="last_attendance_id" readonly="0" invisible="0" optional="hide"/>
                    <field name="leave_manager_id" readonly="0" invisible="0" optional="hide"/>
                    <field name="attendance_state" readonly="0" invisible="0" optional="hide"/>
                    <field name="total_overtime" readonly="0" invisible="0" optional="hide"/>
                    <field name="allocations_count" readonly="0" invisible="0" optional="hide"/>
                    <field name="allocation_count" readonly="0" invisible="0" optional="hide"/>
                    <field name="leaves_count" readonly="0" invisible="0" optional="hide"/>
                    <field name="remaining_leaves" readonly="0" invisible="0" optional="hide"/>
                    <field name="last_attendance_worked_hours" readonly="0" invisible="0" optional="hide"/>
                    <field name="hours_previously_today" readonly="0" invisible="0" optional="hide"/>
                    <field name="hours_last_month" readonly="0" invisible="0" optional="hide"/>

                    <field name="contracts_count" readonly="0" invisible="0" optional="hide"/>
                    <field name="payslip_count" readonly="0" invisible="0" optional="hide"/>
                    <field name="related_partners_count" readonly="0" invisible="0" optional="hide"/>
                    <field name="child_all_count" readonly="0" invisible="0" optional="hide"/>
                <!-- to delete later maybe  above -->


            </xpath>
        </field>
    </record>

</odoo>