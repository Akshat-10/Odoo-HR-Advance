<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_payslip_form_inherit_expected_hours" model="ir.ui.view">
        <field name="name">hr.payslip.form.expected.hours.inherit</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <!-- Add expected_working_hours field after sum_worked_hours -->
            <xpath expr="//field[@name='sum_worked_hours']" position="after">
                <field name="expected_working_hours" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
