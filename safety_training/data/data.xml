<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Safety Training Video for Visitors -->
        <record id="safety_video_visitor" model="safety.training.video">
            <field name="name">GGSPL Visitor Safety Training</field>
            <field name="description">Mandatory safety training for all visitors at GGSPL workplace</field>
            <field name="video_url">/safety_training/static/videos/visitor_safety.mp4</field>
            <field name="duration">180</field>
            <field name="pass_type">visitor</field>
            <field name="pass_percentage">80.0</field>
            <field name="total_questions_per_test">5</field>
        </record>

        <!-- PPE Questions -->
        <record id="question_ppe_01" model="safety.training.question">
            <field name="video_id" ref="safety_video_visitor"/>
            <field name="question">What PPE must be worn during your entire visit and stay in the GGSPL plant?</field>
            <field name="option_a">Safety Helmet</field>
            <field name="option_b">Casual Cap</field>
            <field name="option_c">Sun Hat</field>
            <field name="option_d">No headgear required</field>
            <field name="correct_answer">a</field>
            <field name="category">ppe</field>
            <field name="explanation">Safety Helmet must be worn at all times during visit and stay in Plant for head protection.</field>
        </record>

        <record id="question_ppe_02" model="safety.training.question">
            <field name="video_id" ref="safety_video_visitor"/>
            <field name="question">When should you wear ear plugs or ear muffs at GGSPL?</field>
            <field name="option_a">Only if you feel noise is too loud</field>
            <field name="option_b">In high noise areas that are declared</field>
            <field name="option_c">Never required for visitors</field>
            <field name="option_d">Only during machine operations</field>
            <field name="correct_answer">b</field>
            <field name="category">ppe</field>
            <field name="explanation">Ear plugs/muffs must be worn where high noise areas are declared for hearing protection.</field>
        </record>

        <record id="question_ppe_03" model="safety.training.question">
            <field name="video_id" ref="safety_video_visitor"/>
            <field name="question">Which of these is mandatory PPE for visitors at GGSPL plant?</field>
            <field name="option_a">Safety Goggles</field>
            <field name="option_b">Sunglasses</field>
            <field name="option_c">Reading glasses</field>
            <field name="option_d">Face shield only</field>
            <field name="correct_answer">a</field>
            <field name="category">ppe</field>
            <field name="explanation">Safety Goggles must be worn during visit and stay in Plant for eye protection.</field>
        </record>

        <record id="question_ppe_04" model="safety.training.question">
            <field name="video_id" ref="safety_video_visitor"/>
            <field name="question">What type of footwear is mandatory for visitors at GGSPL?</field>
            <field name="option_a">Sport shoes</field>
            <field name="option_b">Sandals</field>
            <field name="option_c">Safety Shoes</field>
            <field name="option_d">Any closed shoes</field>
            <field name="correct_answer">c</field>
            <field name="category">ppe</field>
            <field name="explanation">Safety Shoes must be worn during visit and stay in Plant for foot protection.</field>
        </record>

        <record id="question_ppe_05" model="safety.training.question">
            <field name="video_id" ref="safety_video_visitor"/>
            <field name="question">What should visitors wear to identify themselves at GGSPL?</field>
            <field name="option_a">Company uniform</field>
            <field name="option_b">Visitor Jacket</field>
            <field name="option_c">ID badge only</field>
            <field name="option_d">Reflective vest</field>
            <field name="correct_answer">b</field>
            <field name="category">ppe</field>
            <field name="explanation">Visitor Jacket must be worn during visit and stay in Plant for identification.</field>
        </record>

        <record id="question_ppe_06" model="safety.training.question">
            <field name="video_id" ref="safety_video_visitor"/>
            <field name="question">When is a dust mask required at GGSPL?</field>
            <field name="option_a">Only in dusty weather</field>
            <field name="option_b">During your visit and stay in Plant</field>
            <field name="option_c">Only when requested</field>
            <field name="option_d">Not required for short visits</field>
            <field name="correct_answer">b</field>
            <field name="category">ppe</field>
            <field name="explanation">Dust Mask must be worn during visit and stay in Plant for respiratory protection.</field>
        </record>

        <!-- Emergency and Safety Instructions -->
        <record id="question_safety_01" model="safety.training.question">
            <field name="video_id" ref="safety_video_visitor"/>
            <field name="question">What should you do if you witness an unsafe condition or accident at GGSPL?</field>
            <field name="option_a">Ignore it if it doesn't affect you</field>
            <field name="option_b">Call +91-9723555092 or +91-7861866302</field>
            <field name="option_c">Wait for someone else to report</field>
            <field name="option_d">Report only at the end of visit</field>
            <field name="correct_answer">b</field>
            <field name="category">emergency</field>
            <field name="explanation">Report any unsafe act, condition, near miss or accident immediately by calling the provided emergency numbers.</field>
        </record>

