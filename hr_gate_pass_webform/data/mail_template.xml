<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="mail_template_gate_pass_public_submit" model="mail.template">
      <field name="name">Gate Pass Public Submission</field>
      <field name="model_id" ref="hr_gate_pass.model_hr_gate_pass"/>
      <field name="subject">Gate Pass Request ${object.name}</field>
      <field name="email_from">${(object.company_id.email or 'noreply@example.com')|safe}</field>
      <field name="body_html" type="html">
        <div>
          <p>Dear Visitor,</p>
          <p>Your gate pass request <strong>${object.name}</strong> has been received with type <strong>${object.pass_type}</strong>.</p>
          <p>Status: ${object.state}</p>
          <p>Reason: ${object.reason or ''}</p>
          <p>Thank you.</p>
        </div>
      </field>
      <field name="auto_delete" eval="True"/>
    </record>
  </data>
</odoo>