<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_energized_work_permit_form_monitoring" model="ir.ui.view">
        <field name="name">energized.work.permit.form.monitoring.inherit</field>
        <field name="model">energized.work.permit</field>
        <field name="inherit_id" ref="EHS.view_energized_work_permit_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="inside">
                <button name="action_open_monitoring_scan" string="Scan Monitoring QR" type="object" class="ehs-btn-scan" invisible="not monitoring_area_id or state != 'in_progress'" confirm="Open Monitoring Scan?"/>
            </xpath>
            <xpath expr="//form/sheet" position="inside">
                <notebook>
                    <page string="Work Permit Monitoring">
                        <group>
                            <group>
                                <field name="monitoring_area_id" options="{'no_create': False}"/>
                                <!-- <label for="monitoring_area_qr_image" string="QR Code"/> -->
                                <field name="monitoring_area_qr_image" widget="image" class="oe_avatar"/>
                                <!-- <label for="monitoring_scan_qr"  string="Scan QR"/> -->
                                <!-- <field name="monitoring_scan_qr" widget="image" class="oe_avatar"/> -->
                            </group>
                            <group>
                                <br/>
                                <field name="monitoring_scan_qr" widget="image" class="oe_avatar"/>
                            </group>
                        </group>
                        <field name="monitoring_line_ids" context="{'default_permit_model':'energized.work.permit','default_permit_res_id': id}">
                            <list editable="bottom" create="0" delete="0">
                                <field name="name"/>
                                <field name="datetime"/>
                                <field name="user_id"/>
                                <field name="compliance_status"/>
                                <field name="state" widget="badge"/>
                            </list>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
