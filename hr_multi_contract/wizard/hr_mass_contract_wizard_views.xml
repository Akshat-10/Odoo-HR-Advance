<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Mass Contract Wizard Form View -->
        <record id="hr_mass_contract_wizard_view_form" model="ir.ui.view">
            <field name="name">hr.mass.contract.wizard.view.form</field>
            <field name="model">hr.mass.contract.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Mass Contracts">
                    <sheet>
                        <div class="alert alert-info mb-3" role="alert">
                            <strong>Mass Contract Creation</strong><br/>
                            Create contracts for multiple employees at once. Configure common settings below.
                        </div>
                        
                        <group string="Employees Selection">
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="employee_ids" widget="many2many_tags" 
                                   options="{'color_field': 'color', 'no_create_edit': True}"
                                   placeholder="Select employees..."/>
                            <field name="employee_count" invisible="1"/>
                        </group>
                        
                        <group string="Contract Information">
                            <group>
                                <field name="structure_type_id" placeholder="Leave empty to use default"/>
                                <field name="contract_type_id" placeholder="Select contract type"/>
                                <field name="wage" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="department_id" placeholder="Leave empty to use employee's department"/>
                                <field name="job_id" placeholder="Leave empty to use employee's job"/>
                                <field name="resource_calendar_id" placeholder="Leave empty to use employee's calendar"/>
                            </group>
                        </group>
                        
                        <group string="Contract Period">
                            <group>
                                <field name="date_start"/>
                                <field name="date_end" placeholder="Leave empty for indefinite contract"/>
                            </group>
                            <group>
                                <field name="use_employee_joining_date"/>
                            </group>
                        </group>
                        
                        <div class="alert alert-warning" role="alert" 
                             invisible="not use_employee_joining_date">
                            <i class="fa fa-info-circle"/> <strong>Note:</strong> Each employee's joining date will be used as their contract start date (overrides the Start Date above).
                        </div>
                        
                        <group string="Advanced Options">
                            <group>
                                <field name="auto_fetch_custom_fields"/>
                                <field name="create_multi_contract_record"/>
                            </group>
                        </group>
                        
                        <div class="alert alert-info" role="alert" 
                             invisible="not auto_fetch_custom_fields">
                            <i class="fa fa-check-circle"/> Employee Code and Father Name will be automatically populated from employee records.
                        </div>
                        
                        <div class="alert alert-info" role="alert" 
                             invisible="not create_multi_contract_record">
                            <i class="fa fa-check-circle"/> A multi-contract record will be created to track this batch for audit purposes.
                        </div>
                        
                        <group string="Additional Notes">
                            <field name="notes" nolabel="1" placeholder="Add any additional notes or comments here..."/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_create_contracts" string="Create Contracts" type="object" 
                                class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Mass Contract Wizard Action -->
        <record id="hr_mass_contract_wizard_action" model="ir.actions.act_window">
            <field name="name">Create Mass Contracts</field>
            <field name="res_model">hr.mass.contract.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="hr.model_hr_employee"/>
            <field name="binding_view_types">list</field>
        </record>

    </data>
</odoo>
