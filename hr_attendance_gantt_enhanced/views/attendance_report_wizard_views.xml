<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="attendance_report_wizard_form" model="ir.ui.view">
        <field name="name">attendance.report.wizard.form</field>
        <field name="model">attendance.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Attendance Report">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="employee_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Generate Report" name="action_generate_report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="attendance_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Generate Attendance Report</field>
        <field name="res_model">attendance.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_attendance_report" name="Attendance Report" parent="hr_attendance.menu_hr_attendance_root" action="attendance_report_wizard_action" sequence="7"/>
    
</odoo>