<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_category_form" model="ir.ui.view">
        <field name="name">kpi.category.form</field>
        <field name="model">kpi.category</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_category_list" model="ir.ui.view">
        <field name="name">kpi.category.list</field>
        <field name="model">kpi.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
            </list>
        </field>
    </record>

    <record id="action_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">kpi.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_category" name="Categories" parent="menu_kpi_root" action="action_category" sequence="20"/>

    <record id="view_sub_category_form" model="ir.ui.view">
        <field name="name">kpi.sub.category.form</field>
        <field name="model">kpi.sub.category</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="category_id" domain="[('company_id', '=', company_id)]"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_sub_category_list" model="ir.ui.view">
        <field name="name">kpi.sub.category.list</field>
        <field name="model">kpi.sub.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" optional="hide"/>
                <field name="category_id"/>
            </list>
        </field>
    </record>

    <record id="action_sub_category" model="ir.actions.act_window">
        <field name="name">Sub Categories</field>
        <field name="res_model">kpi.sub.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_sub_category" name="Sub Categories" parent="menu_kpi_root" action="action_sub_category" sequence="21"/>

    <record id="view_training_form" model="ir.ui.view">
        <field name="name">kpi.training.form</field>
        <field name="model">kpi.training</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_training_list" model="ir.ui.view">
        <field name="name">kpi.training.list</field>
        <field name="model">kpi.training</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
            </list>
        </field>
    </record>

    <record id="action_training" model="ir.actions.act_window">
        <field name="name">Trainings</field>
        <field name="res_model">kpi.training</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_training" name="Trainings" parent="menu_kpi_root" action="action_training" sequence="22"/>

    
</odoo>