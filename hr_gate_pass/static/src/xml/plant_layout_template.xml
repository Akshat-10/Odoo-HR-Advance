<!-- static/src/xml/plant_layout_template.xml -->
<templates>
    <t t-name="hr_gate_pass.PlantLayoutTemplate" owl="1">
        <div class="plant_layout_view">
            <!-- Header -->
            <div class="dashboard-header">
                <div class="dashboard-title">
                    <h2>Plant Layout - Employee Distribution</h2>
                    <button class="btn btn-primary dashboard-refresh" t-on-click="refreshLayout">
                        <i class="fa fa-refresh"/>
                        Refresh
                    </button>
                </div>
            </div>

            <!-- Loading State -->
            <div t-if="state.loading" class="dashboard-loading">
                <div class="loading-spinner">
                    <i class="fa fa-spinner fa-spin fa-3x"/>
                    <p>Loading plant layout...</p>
                </div>
            </div>

            <!-- Error State -->
            <div t-if="state.error" class="dashboard-error">
                <div class="alert alert-danger">
                    <i class="fa fa-exclamation-triangle"/>
                    Error: <t t-esc="state.error"/>
                </div>
            </div>

            <!-- Plant Layout Content -->
            <div t-if="!state.loading and !state.error" class="plant-layout-main">
                <div class="plant-layout-section">
                    <div class="plant-layout-container">
                        <div class="chart-content plant-layout-content">
                            <div class="plant-layout-map" t-ref="plantLayout">
                                <!-- Plant layout will be rendered here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>