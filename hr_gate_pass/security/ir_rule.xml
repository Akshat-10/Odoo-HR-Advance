<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rule_gatepass_requester" model="ir.rule">
        <field name="name">GatePass requester can see own</field>
        <field name="model_id" ref="model_hr_gate_pass"/>
        <field name="domain_force">['|',('requester_user_id','=',user.id),('host_employee_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('hr_gate_pass.group_gatepass_requester'))]"/>
    </record>
    <record id="rule_gatepass_manager" model="ir.rule">
        <field name="name">GatePass manager can see department</field>
        <field name="model_id" ref="model_hr_gate_pass"/>
        <field name="domain_force">['|',('department_id.manager_id.user_id','=',user.id),('department_id.member_ids.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('hr_gate_pass.group_gatepass_manager'))]"/>
    </record>
    <record id="rule_gatepass_hr" model="ir.rule">
        <field name="name">GatePass HR see all</field>
        <field name="model_id" ref="model_hr_gate_pass"/>
        <field name="global" eval="False"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hr_gate_pass.group_gatepass_hr')), (4, ref('hr_gate_pass.group_gatepass_admin'))]"/>
    </record>
</odoo>
