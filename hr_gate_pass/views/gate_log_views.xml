<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_gate_log_tree" model="ir.ui.view">
        <field name="name">hr.gate.log.tree</field>
        <field name="model">hr.gate.log</field>
        <field name="arch" type="xml">
            <list string="Gate Logs">
                <field name="timestamp"/>
                <field name="gate_pass_id"/>
                <field name="action"/>
                <field name="by_user_id"/>
                <field name="gate_id"/>
                <field name="remarks"/>
            </list>
        </field>
    </record>

    <record id="hr_gate_log_form" model="ir.ui.view">
        <field name="name">hr.gate.log.form</field>
        <field name="model">hr.gate.log</field>
        <field name="arch" type="xml">
            <form string="Gate Log">
                <sheet>
                    <group>
                        <field name="timestamp"/>
                        <field name="gate_pass_id"/>
                        <field name="action"/>
                        <field name="by_user_id"/>
                        <field name="gate_id"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_gate_logs_all" model="ir.actions.act_window">
        <field name="name">Gate Logs</field>
        <field name="res_model">hr.gate.log</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
