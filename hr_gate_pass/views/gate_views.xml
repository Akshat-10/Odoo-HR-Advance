<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_hr_gate" model="ir.actions.act_window">
        <field name="name">Gates</field>
        <field name="res_model">hr.gate</field>
    <field name="view_mode">list,form</field>
    </record>

    <record id="hr_gate_tree" model="ir.ui.view">
        <field name="name">hr.gate.tree</field>
        <field name="model">hr.gate</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="location"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <record id="hr_gate_form" model="ir.ui.view">
        <field name="name">hr.gate.form</field>
        <field name="model">hr.gate</field>
        <field name="arch" type="xml">
            <form string="Gate">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="location"/>
                        <field name="company_id"/>
                        <field name="default_security_user_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
