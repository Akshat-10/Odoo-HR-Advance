<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Wizard Form -->
    <record id="view_net_salary_wizard_form" model="ir.ui.view">
        <field name="name">net.salary.wizard.form</field>
        <field name="model">net.salary.wizard</field>
        <field name="arch" type="xml">
            <form string="Net Salary Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>

                    <!-- All Employees checkbox -->
                    <field name="all_employee"/>

                    <!-- Employee selection (hidden when All Employees is checked) -->
                    <field name="employee_ids"
                           widget="many2many_tags"
                           options="{'no_create': True, 'no_open': True}"
                           placeholder="Select Employees"
                           invisible="all_employee"/>
                </group>
                <footer>
                    <button name="action_generate_excel"
                            string="Generate Excel"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_net_salary_wizard" model="ir.actions.act_window">
        <field name="name">Net Salary</field>
        <field name="res_model">net.salary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
