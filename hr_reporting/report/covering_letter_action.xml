<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="covering_letter_report" model="ir.actions.report">
        <field name="name">Covering Letter</field>
        <field name="model">hr.custom.form.cover_letter</field>
        <field name="report_type">qweb-pdf</field>

        <field name="report_name">hr_reporting.covering_letter_template</field>
        <field name="report_file">hr_reporting.covering_letter_template</field>

        <field name="print_report_name">
            'Covering Letter - %s' % (object.employee_id.name if object.employee_id else '')
        </field>

        <field name="binding_model_id"
               ref="model_hr_custom_form_cover_letter"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
