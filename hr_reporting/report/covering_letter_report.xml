<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="covering_letter_template">
        <t t-call="web.external_layout">

            <!-- DISABLE DEFAULT HEADER/FOOTER -->
            <t t-set="display_header" t-value="False"/>
            <t t-set="display_footer" t-value="False"/>

            <main style="
                font-family: 'Lato', 'Helvetica', 'Arial', sans-serif;
                font-size: 14px;
                line-height: 1.6;
                color: #000;
            ">

                <t t-foreach="docs" t-as="o">
                    <t t-set="company" t-value="o.company_id"/>

                    <!-- HEADER -->
                    <div style="margin-bottom: 30px;">

                        <!-- LOGO -->
                        <t t-if="company and company.logo">
                            <img t-att-src="'data:image/png;base64,%s' % company.logo"
                                 style="max-height: 70px; margin-bottom: 10px;"/>
                        </t>

<!--                        &lt;!&ndash; COMPANY NAME &ndash;&gt;-->
<!--                        <div style="font-weight: 600;">-->
<!--                            <t t-esc="company.name"/>-->
<!--                        </div>-->
<!--                        <div>-->
<!--                            <t t-esc="company.partner_id.country_id.name or ''"/>-->
<!--                        </div>-->

                    </div>

                    <!-- DATE -->
                    <p><strong>Date:</strong> <t t-esc="o.er_date"/></p>

                    <br/>

                    <!-- TO -->
                    <p>
                        To,<br/>
                        <t t-esc="o.er_to_address"/>
                    </p>

                    <br/>

                    <!-- SUBJECT -->
                    <p>
                        <strong>Sub: <t t-esc="o.er_subject"/></strong>
                    </p>

                    <br/>

                    <!-- BODY -->
                    <p>Dear Sir / Madam,</p>

                    <p style="white-space: pre-line;">
                        <t t-esc="o.er_body"/>
                    </p>

                    <br/>

                    <!-- SIGNATURE -->
                    <p>
                        Thanking you,<br/>
                        Yours sincerely,<br/><br/>
                        (<t t-esc="o.employee_id.name if o.employee_id else ''"/>)
                    </p>

                    <br/><br/>

                    <!-- APPROVAL -->
                    <p>
                        Approved By,<br/><br/>
                        ____________________<br/>
                        Authorized Signatory<br/>
                        <t t-esc="company.name"/>
                    </p>

                </t>

            </main>
        </t>
    </template>

</odoo>
