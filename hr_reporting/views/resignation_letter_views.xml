<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_custom_form_resignation_form_report" model="ir.ui.view">
        <field name="name">hr.custom.form.resignation_letter.form.inherit.report</field>
        <field name="model">hr.custom.form.resignation_letter</field>
        <field name="inherit_id" ref="hr_custom_forms.view_hr_custom_form_resignation_form"/>
        <field name="arch" type="xml">

            <xpath expr="//form/sheet" position="inside">
                <button name="action_download_word"
                        string="Generate Report"
                        type="object"
                        class="btn-primary"/>

                <button name="action_generate_resignation_report"
                        string="Generate Report"
                        type="object"
                        class="btn-primary"
                        invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>