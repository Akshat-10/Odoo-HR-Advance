<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_applicant_view_form_report" model="ir.ui.view">
        <field name="name">Jobs - Recruitment Form View.inherit.report</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_contract_salary.hr_applicant_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//form/sheet" position="before">
                <header>
                    <button name="action_generate_excel_report"
                            string="Generate Report"
                            type="object"
                            class="btn-primary"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>