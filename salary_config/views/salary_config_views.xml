<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Menu under Salary Package Configurator -->
    <menuitem id="menu_salary_config_root" name="Salary Configuration" parent="hr_contract_salary.salary_package_menu" sequence="50"/>

    
    <record id="view_salary_config_structure_list" model="ir.ui.view">
        <field name="name">salary.config.structure.list</field>
        <field name="model">salary.config.structure</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_salary_config_structure_form" model="ir.ui.view">
        <field name="name">salary.config.structure.form</field>
        <field name="model">salary.config.structure</field>
        <field name="arch" type="xml">
            <form string="Salary Structure">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Help &amp; Examples">
                            <field name="examples_html" nolabel="1"/>
                        </page>
                        <page string="Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="code_id"/>
                                    <field name="code" optional="hide"/>
                                    <field name="impact"/>
                                    <field name="compute_mode"/>
                                    <field name="value"/>
                                    <field name="python_code" invisible="compute_mode != 'formula'"/>
                                    <field name="show_in_offer"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Structures -->
    <record id="action_salary_config_structure" model="ir.actions.act_window">
        <field name="name">Salary Structures</field>
        <field name="res_model">salary.config.structure</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_salary_config_structure" parent="menu_salary_config_root" action="action_salary_config_structure" sequence="10"/>


