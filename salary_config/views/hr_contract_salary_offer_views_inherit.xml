<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_salary_offer_view_form_inherit_salary_config" model="ir.ui.view">
        <field name="name">hr.contract.salary.offer.form.inherit.salary.config</field>
        <field name="model">hr.contract.salary.offer</field>
        <field name="inherit_id" ref="hr_contract_salary.hr_contract_salary_offer_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="after">
                <notebook>
                    <page name="salary_structure" string="Salary Structure">
                        <group>
                            <field name="monthly_budget"  readonly="1"/>
                            <field name="inhand_amount" readonly="1"/>
                        </group>
                        <group string="Salary Structure">
                            <field name="structure_line_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="code_id"/>
                                    <field name="code" optional="hide"/>
                                    <field name="impact"/>
                                    <field name="compute_mode"/>
                                    <field name="value"/>
                                    <field name="python_code" invisible="compute_mode != 'formula'" optional="hide"/>
                                    <field name="amount_monthly" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </list>
                            </field>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
