<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_custom_form_nomination_f_docx_button"
                model="ir.ui.view">
            <field name="name">hr.custom.form.nomination_f.form.inherit.docx</field>
            <field name="model">hr.custom.form.nomination_f</field>

            <!-- ✅ CORRECT MODULE NAME -->
            <field name="inherit_id"
                   ref="hr_custom_forms.view_hr_custom_form_nomination_f_form"/>

            <field name="arch" type="xml">

                <!-- ✅ ONLY VALID WAY: insert header INSIDE form -->
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button
                            name="action_generate_nomination_f_docx"
                            type="object"
                            string="Download Form F (Word)"
                            class="btn-primary"
                            icon="fa-download"/>
                    </header>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
