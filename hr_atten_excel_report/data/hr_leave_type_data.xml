<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- 
            Leave Types for Attendance Master Report
            HD - Half Day
            CL - Casual Leave
            SL - Sick Leave
            EL - Earned Leave
            ML - Management Leave
        -->

        <!-- Half Day (HD) -->
        <record id="holiday_status_hd" model="hr.leave.type">
            <field name="name">Half Day (HD)</field>
            <field name="requires_allocation">no</field>
            <field name="employee_requests">no</field>
            <field name="leave_validation_type">both</field>
            <field name="allocation_validation_type">hr</field>
            <field name="request_unit">half_day</field>
            <field name="leave_notif_subtype_id" ref="hr_holidays.mt_leave"/>
            <field name="responsible_ids" eval="[(4, ref('base.user_admin'))]"/>
            <field name="icon_id" ref="hr_holidays.icon_14"/>
            <field name="color">6</field>
            <field name="company_id" eval="False"/>
            <field name="sequence">10</field>
            <field name="active" eval="True"/>
            <field name="show_on_dashboard" eval="True"/>
        </record>

        <!-- Casual Leave (CL) -->
        <record id="holiday_status_casual" model="hr.leave.type">
            <field name="name">Casual Leave (CL)</field>
            <field name="requires_allocation">yes</field>
            <field name="employee_requests">no</field>
            <field name="leave_validation_type">both</field>
            <field name="allocation_validation_type">hr</field>
            <field name="request_unit">day</field>
            <field name="leave_notif_subtype_id" ref="hr_holidays.mt_leave"/>
            <field name="allocation_notif_subtype_id" ref="hr_holidays.mt_leave_allocation"/>
            <field name="responsible_ids" eval="[(4, ref('base.user_admin'))]"/>
            <field name="icon_id" ref="hr_holidays.icon_4"/>
            <field name="color">7</field>
            <field name="company_id" eval="False"/>
            <field name="sequence">11</field>
            <field name="active" eval="True"/>
            <field name="show_on_dashboard" eval="True"/>
        </record>

        <!-- Sick Leave (SL) -->
        <record id="holiday_status_sick" model="hr.leave.type">
            <field name="name">Sick Leave (SL)</field>
            <field name="requires_allocation">no</field>
            <field name="employee_requests">no</field>
            <field name="leave_validation_type">both</field>
            <field name="allocation_validation_type">hr</field>
            <field name="request_unit">hour</field>
            <field name="leave_notif_subtype_id" ref="hr_holidays.mt_leave_sick"/>
            <field name="responsible_ids" eval="[(4, ref('base.user_admin'))]"/>
            <field name="support_document">True</field>
            <field name="icon_id" ref="hr_holidays.icon_22"/>
            <field name="color">3</field>
            <field name="company_id" eval="False"/>
            <field name="sequence">12</field>
            <field name="active" eval="True"/>
            <field name="show_on_dashboard" eval="True"/>
        </record>

        <!-- Earned Leave (EL) -->
        <record id="holiday_status_earned" model="hr.leave.type">
            <field name="name">Earned Leave (EL)</field>
            <field name="requires_allocation">yes</field>
            <field name="employee_requests">no</field>
            <field name="leave_validation_type">both</field>
            <field name="allocation_validation_type">hr</field>
            <field name="request_unit">day</field>
            <field name="leave_notif_subtype_id" ref="hr_holidays.mt_leave"/>
