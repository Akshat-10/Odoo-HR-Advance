        <record model="mail.template" id="email_template_initial_qualification">
            <field name="name">Recruitment: Initial Qualification</field>
            <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
            <field name="email_from">{{ (object.user_id.email_formatted or 'noreply@example.com') }}</field>
            <field name="email_to">{{ (not object.partner_id and object.email_from or '') }}</field>
            <field name="partner_to">{{ object.partner_id.id or '' }}</field>
            <field name="subject">Your Job Application: {{ object.job_id.name }}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="background-color: white; border-collapse: collapse; margin-left: 20px;">
                    <tr>
                        <td valign="top" style="padding: 0px 10px;">
                            <div style="font-size: 13px; margin: 0px; padding: 0px;">
                                <t t-if="object.name">
                                    <p>Dear <t t-out="object.name" />,</p>
                                </t>
                                <t t-if="object.job_id and object.job_id.name and object.company_id and object.company_id.name">
                                    <p>Thank you for applying to the position of <strong><t t-out="object.job_id.name" /></strong> at <strong><t t-out="object.company_id.name" /></strong>.</p>
                                </t>
                                <p>After reviewing your application, we are pleased to inform you that you have passed the initial qualification stage. We will now proceed to schedule an interview with you.</p>
                                <t t-if="'website_url' in object.job_id and object.job_id.website_url">
                                    <div style="padding: 16px 8px 16px 8px;">
                                        <a t-att-href="object.job_id.website_url" style="background-color: #875a7b; text-decoration: none; color: #fff; padding: 8px 16px 8px 16px; border-radius: 5px;">Job Description</a>
                                    </div>
                                </t>
                                <h3 style="color:#9A6C8E;"><strong>What is the next step?</strong></h3>
                                <p>We will contact you soon to schedule an interview. Please keep an eye on your email and phone.</p>
                                <t t-if="object.user_id">
                                    <hr width="97%" style="background-color: rgb(204,204,204); border: medium none; clear: both; display: block; font-size: 0px; min-height: 1px; line-height: 0; margin: 16px 0px 16px 0px;"/>
                                    <h3 style="color:#9A6C8E;"><strong>Your Contact:</strong></h3>
                                    <p>
                                        <t t-if="object.user_id.name">
                                            <strong><t t-out="object.user_id.name" /></strong><br/>
                                        </t>
                                        <t t-if="object.user_id.email">
                                            <span>Email: <t t-out="object.user_id.email or ''" /></span><br/>
                                        </t>
                                        <t t-if="object.user_id.phone">
                                            <span>Phone: <t t-out="object.user_id.phone or ''" /></span>
                                        </t>
                                    </p>
                                </t>
                                <hr width="97%" style="background-color: rgb(204,204,204); border: medium none; clear: both; display: block; font-size: 0px; min-height: 1px; line-height: 0; margin: 16px 0px 16px 0px;"/>
                                <p>Best regards, The HR Team</p>
                            </div>
                        </td>
                    </tr>
                </table>
            </field>
            <field name="lang">{{ object.partner_id.lang or '' }}</field>
        </record>

