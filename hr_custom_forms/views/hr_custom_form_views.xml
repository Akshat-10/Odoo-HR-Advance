        <!-- ER1 Covering Letter -->
        <record id="view_hr_custom_form_er1_list" model="ir.ui.view">
            <field name="name">hr.custom.form.er1.list</field>
            <field name="model">hr.custom.form.er1</field>
            <field name="arch" type="xml">
                <list default_order="sequence,name">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="company_id"/>
                    <field name="employee_code"/>
                    <field name="father_name"/>
                    <field name="joining_date"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                </list>
            </field>
        </record>

        <record id="view_hr_custom_form_er1_form" model="ir.ui.view">
            <field name="name">hr.custom.form.er1.form</field>
            <field name="model">hr.custom.form.er1</field>
            <field name="arch" type="xml">
                <form string="ER1 Covering Letter">
                    <sheet>
                        <field name="sequence" invisible="1"/>
                        <group>
                            <field name="name"/>
                            <field name="company_id" required="1"/>
                            <field name="employee_id" required="1" domain="[('company_id', '=', company_id)]"/>
                        </group>
                        <group>
                            <group>
                                <field name="employee_code" readonly="1"/>
                                <field name="father_name"/>
                                <field name="joining_date"/>
                            </group>
                            <group>
                                <field name="department_id"/>
                                <field name="job_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hr_custom_form_er1" model="ir.actions.act_window">
            <field name="name">ER1 Covering Letter</field>
            <field name="res_model">hr.custom.form.er1</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p>Create and track ER1 Covering Letters from here.</p>
            </field>
        </record>

        <menuitem id="menu_hr_custom_form_er1" name="ER1 Covering Letter" parent="menu_hr_custom_forms_root" action="action_hr_custom_form_er1" sequence="10"/>

